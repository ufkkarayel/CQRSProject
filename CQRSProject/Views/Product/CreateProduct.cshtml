@model CQRSProject.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />


<div class="container">
    <form method="post">
        <br />  <br />
        <label>Ürün Adı</label>
        <br />
        <input type="text" asp-for="ProductName" class="form-control" />
        <br />
        <label>Ürün Fiyatı</label>
        <br />
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Ürün Stok Sayısı</label>
        <br />
        <input type="text" asp-for="Stock" class="form-control" />
        <br />
        <label>Ürün Kategorisi</label>
        <br />
        <input type="text" asp-for="CategoryID" class="form-control" />
        <br />
        <br />
        <button class="btn btn-outline-success">Kaydet</button>
    </form>
</div>